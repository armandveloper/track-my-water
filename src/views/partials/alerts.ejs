<% if (errorFeedback.length > 0) { %>
<div class="toast-container mx-auto mt-3">
	<% errorFeedback.forEach(msg => { %>
	<div
		class="toast align-items-center text-white bg-danger border-0 fade show"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
	>
		<div class="d-flex">
			<div class="toast-body"><%= msg; %></div>
			<button
				type="button"
				class="btn-close btn-close-white me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
	<% }); %>
</div>
<% } %> <% if (successFeedback.length > 0) { %>
<div class="toast-container mx-auto mt-3">
	<% successFeedback.forEach(msg => { %>
	<div
		class="toast align-items-center text-white bg-success border-0 fade show"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
	>
		<div class="d-flex">
			<div class="toast-body"><%= msg; %></div>
			<button
				type="button"
				class="btn-close btn-close-white me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
	<% }); %>
</div>
<% } %> <% if (error.length > 0) { %>
<div class="toast-container mx-auto mt-3">
	<% error.forEach(msg => { %>
	<div
		class="toast align-items-center text-white bg-danger border-0 fade show"
		role="alert"
		aria-live="assertive"
		aria-atomic="true"
	>
		<div class="d-flex">
			<div class="toast-body"><%= msg; %></div>
			<button
				type="button"
				class="btn-close btn-close-white me-2 m-auto"
				data-bs-dismiss="toast"
				aria-label="Close"
			></button>
		</div>
	</div>
	<% }); %>
</div>
<% } %>
